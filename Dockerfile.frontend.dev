FROM python:3.12-slim

LABEL maintainer="FIAP - Equipe Going Merry"
LABEL description="Frontend Dev - Streamlit com hot-reload"

WORKDIR /app

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    POETRY_VERSION=1.8.3 \
    POETRY_HOME="/opt/poetry" \
    POETRY_VIRTUALENVS_CREATE=false \
    PATH="/opt/poetry/bin:$PATH" \
    PYTHONPATH=/app

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    curl \
    vim \
    git && \
    curl -sSL https://install.python-poetry.org | python3 - && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

COPY pyproject.toml poetry.lock* ./

RUN poetry install --no-interaction --no-ansi --no-root

COPY frontend/ ./frontend/
COPY start-frontend-dev.sh ./

RUN sed -i 's/\r$//' /app/start-frontend-dev.sh && \
    chmod +x /app/start-frontend-dev.sh

EXPOSE 8501

CMD ["sh", "./start-frontend-dev.sh"]
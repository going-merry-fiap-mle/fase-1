# ================================================
# CONFIGURACAO - AMBIENTE DE DESENVOLVIMENTO
# ================================================
# Copie para .env.dev e ajuste conforme necessario
# Comando: cp .env.dev.example .env.dev

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Security (OK usar chave fraca em dev)
SECRET_KEY=dev-secret-key-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///site.db

# Python Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
PYTHONPATH=/app

# Logging
LOG_LEVEL=DEBUG
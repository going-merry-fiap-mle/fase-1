# ================================================
# CONFIGURACAO - AMBIENTE DE PRODUCAO
# ================================================
# Copie para .env.prod e ajuste com valores seguros
# Comando: cp .env.prod.example .env.prod

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Docker Port Mapping (opcional - tem valores padrão)
# BACKEND_PORT=5000    # Porta externa para o backend (padrão: 5000)

# Security (IMPORTANTE: Gere uma chave forte e unica)
# Para gerar: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=GERE_UMA_CHAVE_FORTE_AQUI_64_CARACTERES_HEXADECIMAIS

# Database Configuration
# Exemplo PostgreSQL: postgresql://user:password@host:5432/dbname
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Python Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
PYTHONPATH=/app

# Logging
LOG_LEVEL=INFO

# Optional: External Services
# SENTRY_DSN=https://your-sentry-dsn
# REDIS_URL=redis://localhost:6379/0